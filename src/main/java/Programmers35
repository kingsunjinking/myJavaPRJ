class Solution {
    public int[] solution(int[] array) {
        int[] answer = new int[2];
        int b = 0;
        for(int i = 0; i < array.length; i++){
            if(b < array[i]){
                b = array[i];
                answer[0] = b;
                answer[1] = i;
            }
        }
        return answer;
    }
}
